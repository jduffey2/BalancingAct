<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.jduff.balancingact.Game">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:onClick="removeSelection">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="pauseGame"
                android:background="@drawable/pause"
                android:contentDescription="@string/pause_desc"/>
            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timer_view"
                android:textSize="27sp"
                android:textColor="@color/colorPrimaryDark"/>
            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="undoMove"
                android:background="@drawable/undo"
                android:contentDescription="@string/undo_desc"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="redoMove"
                android:background="@drawable/redo"
                android:contentDescription="@string/redo_desc"/>
        </LinearLayout>
        <com.example.jduff.balancingact.FlowLayout
            android:id="@+id/numbers_Layout"
            android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/target_text"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/target_size"
            android:background="@drawable/border"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/target_Layout"/>
    </LinearLayout>
</FrameLayout>
